<%- include('./header.ejs') %>
<style>
    .card_padding{
        margin: 50px;
        padding: 50px
    }
    .margin{
        margin-bottom: 40px;
    }
    .btn_{
        width: 100%;
    }
    @media (max-width: 991px) {
        .card_padding{
            margin: 0px;
            margin-top: 50px;
            padding: 50px;
        }
    }
    @media (max-width: 767px) {
        .btn_{
            margin-top:10px;
            margin-bottom:10px;
            width: 100%;
        }
        .card_padding{
            padding: 42px
        }
    }
    @media (max-width: 480px) {
        .card_padding{
            padding: 32px
        }
    }
</style>
<main>
    <div class="container">
        <div class="card card_padding" >
            <h5>訂單記錄</h5>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">name</th>
                    <th scope="col">license</th>
                    <th scope="col">payment</th>
                    <th scope="col">isPay</th>
                    <th scope="col">isReturn</th>
                </tr>
                </thead>
                <tbody>
                    <% for(let order of orders){ %>
                        <tr>
                            <th scope="col"><%= order.User.name %></th>
                            <th scope="col"><%= order.Vehicle.license_plate %></th>
                            <th scope="col"><%= order.payment_method %></th>
                            <% if ( order.isPay ){%>
                                <th scope="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value=""  checked>
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Pay
                                        </label>
                                    </div>
                                </th>
                            <%}else{%>
                                <th scope="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" >
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Pay
                                        </label>
                                    </div>
                                </th>
                            <%}%>
                            <% if ( order.isReturn ){%>
                                <th scope="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" checked>
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Checked checkbox
                                        </label>
                                    </div>
                                </th>
                            <%}else{%>
                                <th scope="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" >
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Return
                                        </label>
                                    </div>
                                </th>
                            <%}%>


                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
<%- include('../components/footer.ejs') %>
